{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      
  
      "strict": true,
  
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
  
      "esModuleInterop": true,
     
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"],
    "scripts": {
        "dev": "nodemon src/entry.ts"
      },
    "scripts": {
        // ...
        "dev:debug": "nodemon --inspect src/entry.ts"
      }
      
  }
  